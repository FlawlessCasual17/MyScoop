{
    "version": "2023.8.9408",
    "description": "Local control for updating and editing Windows images and deployments.",
    "homepage": "https://www.ntlite.com",
    "license": {
        "identifier": "Proprietary",
        "url": "https://www.ntlite.com/shop/"
    },
    "architecture": {
        "64bit": {
            "url": "https://downloads.ntlite.com/files/NTLite_setup_x64.exe",
            "hash": "7e60e2a9c72ebc0c60dbcb43ea322c0e00d0dfde634efd8475f508062cad90be"
        },
        "32bit": {
            "url": "https://downloads.ntlite.com/files/NTLite_setup_x86.exe",
            "hash": "1a3b6cb85ae5828c563a80cf39d05404ebbe1c81bc36b133a0fec67e0077a6bb"
        }
    },
    "innosetup": true,
    "pre_install": [
        "$value = @'",
        "<?xml version=\"1.0\" encoding=\"utf-8\"?>",
        "<GeneralOptions xmlns=\"urn:schemas-nliteos-com:pn.v1\">",
        "    <CheckUpdate>false</CheckUpdate>",
        "    <AutoUpdate>false</AutoUpdate>",
        "</GeneralOptions>",
        "'@",
        "if (!(Test-Path \"$persist_dir\\settings.xml\")) {",
        "    Set-Content \"$dir\\settings.xml\" $value -Encoding $(if ($PSEdition -eq 'Core') { Write-Output 'utf8bom' } else { Write-Output 'utf8' })",
        "}"
    ],
    "bin": "NTLite.exe",
    "shortcuts": [
        [
            "NTLite.exe",
            "NTLite"
        ]
    ],
    "persist": [
        "Cache",
        "Presets",
        "Updates",
        "settings.xml"
    ],
    "checkver": {
        "url": "https://www.ntlite.com/download/",
        "regex": "\\>v([\\d.]+)\\<"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://downloads.ntlite.com/files/NTLite_setup_x64.exe"
            },
            "32bit": {
                "url": "https://downloads.ntlite.com/files/NTLite_setup_x86.exe"
            }
        },
        "hash": {
            "url": "https://www.ntlite.com/download/",
            "regex": "$basename.*?\\>SHA-256\\:\\s$sha256\\<"
        }
    }
}
