{
    "version": "2023.7.9371",
    "description": "Local control for updating and editing Windows images and deployments.",
    "homepage": "https://www.ntlite.com",
    "license": {
        "identifier": "Proprietary",
        "url": "https://www.ntlite.com/shop/"
    },
    "architecture": {
        "64bit": {
            "url": "https://downloads.ntlite.com/files/NTLite_setup_x64.exe",
            "hash": "3831060a7049645ef85b13bc17c63b086c7c002b4b57f1fd4f66c8b035547d86"
        },
        "32bit": {
            "url": "https://downloads.ntlite.com/files/NTLite_setup_x86.exe",
            "hash": "5197ac08b4cbec91cb243e0385d324d913acb0cc89ec2c1f820b7080d11cda6e"
        }
    },
    "innosetup": true,
    "pre_install": [
        "$value = @'",
        "<?xml version=\"1.0\" encoding=\"utf-8\"?>",
        "<GeneralOptions xmlns=\"urn:schemas-nliteos-com:pn.v1\">",
        "    <CheckUpdate>false</CheckUpdate>",
        "    <AutoUpdate>false</AutoUpdate>",
        "</GeneralOptions>",
        "'@",
        "if (!(Test-Path \"$persist_dir\\settings.xml\")) { Set-Content \"$dir\\settings.xml\" $value -Encoding 'utf8BOM' }"
    ],
    "bin": "NTLite.exe",
    "shortcuts": [
        [
            "NTLite.exe",
            "NTLite"
        ]
    ],
    "persist": [
        "Presets",
        "Updates",
        "settings.xml"
    ],
    "checkver": {
        "url": "https://www.ntlite.com/download/",
        "regex": "\\>v([\\d.]+)\\<"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://downloads.ntlite.com/files/NTLite_setup_x64.exe"
            },
            "32bit": {
                "url": "https://downloads.ntlite.com/files/NTLite_setup_x86.exe"
            }
        },
        "hash": {
            "url": "https://www.ntlite.com/download/",
            "regex": "$basename.*?\\>SHA-256\\:\\s$sha256\\<"
        }
    }
}
