            "hash": "f02be373f3da7971daed34afe611241b9d2d5a0fec6ebf087228557c20e92d73",
            "installer": {
                "script": [
                    "if (!(is_admin)) { error \"$app requires admin rights to $cmd\"; break }",
                    "Start-Process \"$dir\\setup.exe\" -Verb 'RunAs' -Args '/S'; if (!(Test-Path \"${env:ProgramFiles(x86)}\\PowerISO\")) { Start-Sleep -Seconds 2 }",
                    "Start-Sleep -Seconds 2; Stop-Process -Name 'PWRISOVM' -ErrorAction 'SilentlyContinue' -Force; Remove-Item \"$dir\\setup.exe\"",
                    "$utf8Only = New-Object System.Text.UTF8Encoding($false)",
                    "[System.IO.File]::WriteAllText(\"$dir\\piso.cmd\", '@\"%ProgramFiles(x86)%\\PowerISO\\piso.exe\"  %*', $utf8Only)"
                ]
            },
            "uninstaller": {
                "script": [
                    "if ($cmd -eq 'uninstall') {",
                    "    if (!(is_admin)) { error \"$app requires admin rights to $cmd\"; break }",
                    "    Stop-Process -Name 'PWRISOVM', 'explorer' -Force",
                    "    Start-Process \"${env:ProgramFiles(x86)}\\PowerISO\\uninstall.exe\" -Wait -Verb 'RunAs' -Args '/S'",
                    "    Remove-Item 'HKCU:\\SOFTWARE\\PowerISO1' -Recurse",
                    "}"
                ]
            }
        },
